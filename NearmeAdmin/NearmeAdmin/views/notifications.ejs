<md-content ng-controller="NotificationCtrl">
    <section layout="row" layout-padding>
        <div flex="50">

            <form name="form" novalidate>

                <div layout="row">
                    <md-input-container flex>
                        <label>Message</label>
                        <textarea required ng-model="notification.message" rows="5"></textarea>
                        <div ng-messages="form.message.$error">
                            <div ng-message="required">Field required</div>
                        </div>
                    </md-input-container>
                </div>

                <div layout="row" layout-align="end center">
                    <md-button class="md-raised md-primary"
                        ng-disabled="!form.$valid"
                        ng-click="onSubmit(form.$valid)">
                        {{ !isSending ? 'Send' : 'Sending...' }}
                    </md-button>
                </div>

            </form>

        </div>
        <div flex="50"></div>
    </section>

</md-content>